{
  "name": "vscode-report-markup-language",
  "displayName": "Report Markup Language (RML)",
  "description": "Rich RML (Report Markup Language) support for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "rml",
    "report",
    "markup",
    "language"
  ],
  "activationEvents": [
    "onLanguage:rml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rml",
        "aliases": [
          "Report Markup Language",
          "rml"
        ],
        "extensions": [
          ".rml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rml",
        "scopeName": "source.rml",
        "path": "./syntaxes/rml.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "rml.exportToPdf",
        "title": "Export to PDF",
        "category": "RML"
      },
      {
        "command": "rml.previewPdf",
        "title": "Preview as PDF",
        "category": "RML"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "rml.previewPdf",
          "when": "resourceExtname == .rml",
          "group": "navigation@1"
        },
        {
          "command": "rml.exportToPdf",
          "when": "resourceExtname == .rml",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "rml.previewPdf",
          "when": "resourceExtname == .rml",
          "group": "navigation@1"
        },
        {
          "command": "rml.exportToPdf",
          "when": "resourceExtname == .rml",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}