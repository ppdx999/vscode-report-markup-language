{
  "name": "Report Markup Language",
  "scopeName": "source.rml",
  "fileTypes": ["rml"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rml",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rml",
          "match": "\\b(report|section|table|chart|if|else|for|while|def)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rml",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rml",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    }
  }
}